@{
    ViewData["Title"] = "Home Page";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div class="row">
        <div class="col-md-6 offset-3">
            <p>
                <h1>Currency Exchange Form</h1>
            </p>          

            <div class="row">
                <div class="col-md-8 offset-2">
                    <form method="post" action="AddItemToOrderCart">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">
                            <label for="txtFrom" class="control-label"><strong>From Currency</strong></label>
                            <input type="text" class="form-control" id="from_id" placeholder="e.g. EUR" name="txtFrom" required />
                        </div>
                        <div class="form-group">
                            <label for="txtTo" class="control-label"><strong>To Currency</strong></label>
                            <input type="text" id="to_id" placeholder="e.g. GBP" name="txtTo" required class="form-control" />
                        </div>
                        <div class="form-group">
                            <label for="txtAmount" class="control-label"><strong>Amount</strong></label>
                            <input type="text" class="form-control" id="amount_id" placeholder="Enter Amount to convert" name="txtAmount" required>
                        </div>
                        <div class="form-group">
                            <input id = "SubmitOrdBut" class="btn btn-outline-success float-right" type="submit" value="Submit Order" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>




